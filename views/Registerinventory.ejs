<%- include('partials/header'); -%>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
	<link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500&display=swap" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">

<div class="container" style="margin-top: 10vmin;">
	
<form style="padding: 100px;box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);font-family: 'Varela Round', sans-serif;" method="post" action="/Registerinventory">
	<h1 style="font-family: 'Dancing Script', cursive;">Register for Inventory</h1><hr>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="nameinventory"><img src="images/name.png" width="4%">&nbsp;Name</label>
      <input type="text" class="form-control" name="inputName" id="inputName" placeholder="Enter the Inventory Name" required>
    </div>
    <div class="form-group col-md-6">
      <label for="contactinventory"><img src="images/call.png" width="4%">&nbsp;Contact No</label>
      <input type="number" class="form-control" name="inputContact" id="inputControl" placeholder="Enter Inventory Contact Number" required>
    </div>
  </div>

  <div class="form-row">
  <div class="form-group col-md-6">
    <label for="PINinventory"><img src="images/pin.png" width="4%">&nbsp;PIN Code</label>
    <select id="PINinventory" name="PINinventory" class="form-control">
      <% for(var i =0;i<pincodes.length;i++){ %>
      <option class="form-group"><%= pincodes[i].pincode %></option>
    <% } %>
    </select>
  </div>
  </div><br>


  <div class="form-group">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="gridCheck" required>
      <label class="form-check-label" for="gridCheck">
       The Inventory acknowledges Government RNR and gives the assurance that it is registered Under MTP Act 1997.
      </label>
    </div>
  </div><br>
  <div class="row d-flex justify-content-between">
  	<div class="col-md-8">
  		<button type="submit" class="btn btn-primary" style="width: 40%" onclick="myFunction()">Register</button>
  	</div>
  	<div class="col-md-4">
  		<br><img src="images\inventory.png" class="img-fluid">
  	</div>
  	
  </div>
</form>

</div>
<script>
  function myFunction() {
    alert("Inventory registration is successful.");
  }
  </script>
  <script type="text/javascript" src="js/end.js"></script>
  
<%- include('partials/footer'); -%>